<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Login</title>
    <style>
        /* Style for the loading container */
        .loading-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #fff; /* Background color of the loading screen */
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999; /* Ensure the loading screen is on top of other elements */
        }

        /* Style for the logo/image */
        .loading-logo {
            max-width: 100px; /* Adjust the size of your logo/image as needed */
        }

        /* Style for the content (hidden while loading) */
        .content {
            display: none; /* Initially hide the content */
        }
        body {
            margin: 0;
            padding: 0;
            background-image: url('@Url.Content("~/Image/cover.jpg")');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            height: 100vh; /* Set the body height to 100% of the viewport height */
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
